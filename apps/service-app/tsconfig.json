{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@root/*" : ["src/*"],
      "@controllers/*" : ["src/controllers/*"],
      "@routes/*" : ["src/routes/*"]
    },
    "types": ["node","jest"],
    "target": "es5",                  
    "module": "commonjs",                  
    "allowJs": true,          
    "checkJs": true,       
    "sourceMap": false,         
    "outDir": "./dist",        
    "rootDir": "./src",
    "noEmit": true,               
    "noImplicitAny": false,       
    "strictNullChecks": true,     
    "moduleResolution": "node",     
    "esModuleInterop": true,          
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true     
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
